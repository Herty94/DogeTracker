<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
              xmlns:app="http://schemas.android.com/apk/res-auto" xmlns:tools="http://schemas.android.com/tools"
              android:orientation="vertical"
              android:layout_width="match_parent"
              android:layout_height="match_parent">

    <ImageView
            android:id="@+id/imageView2"
            android:layout_width="136dp" android:layout_height="105dp"
            android:layout_alignParentStart="true"
            android:layout_alignParentTop="true" android:layout_marginStart="0dp"
            android:layout_marginTop="0dp" android:src="@drawable/doge"
    />
    <TextView
            android:id="@+id/tv_dog_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" android:layout_marginStart="4dp"
            android:layout_toEndOf="@+id/imageView2"
            android:textSize="20dp"
            android:text="Peso"/>
    <TextView
            android:id="@+id/tv_breed"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" android:layout_below="@+id/tv_dog_name"
            android:layout_marginStart="3dp"
            android:layout_marginTop="6dp" android:layout_toEndOf="@+id/imageView2" android:text="breed"/>
    <TextView
            android:id="@+id/tv_weight"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" android:layout_below="@+id/tv_breed"
            android:layout_marginStart="3dp"
            android:layout_marginTop="7dp" android:layout_toEndOf="@+id/imageView2" android:text="weight"/>
    <TextView
            android:id="@+id/tv_date"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" android:layout_below="@+id/tv_weight"
            android:layout_marginStart="3dp"
            android:layout_marginTop="7dp" android:layout_toEndOf="@+id/imageView2" android:text="Birthday"/>
</RelativeLayout>